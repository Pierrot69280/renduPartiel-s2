{% extends 'base.html.twig' %}

{% block title %}{{ article.name }}{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-6 position">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{ article.name }}</h5>
                        <p class="card-text">{{ article.description }}</p>
                        <div>
                            <a class="btn btn-danger" href="{{ path('app_delete', {id:article.id} ) }}"><i class="bi bi-trash"></i> Supprimer</a>
                            <a class="btn btn-warning" href="{{ path('app_edit', {id:article.id} ) }}"><i class="bi bi-pencil-square"></i> Modifier</a>
                            <a href="{{ path('app_articles')}}" class="btn btn-secondary">Retour</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
