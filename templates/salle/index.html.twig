
{% extends 'base.html.twig' %}

{% form_theme form "bootstrap_5_layout.html.twig" %}

{% block title %}Gestion des Salles{% endblock %}

{% block body %}
    <div class="container position">
        <h3 class="mb-4">Liste des salles</h3>

        {% for salle in salles %}
            <div class="card mb-3">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div class="d-flex flex-column">
                        <span class="fs-4">{{ salle.name }}</span>
                    </div>
                    <div>
                        <a href="{{ path('delete_salle', {'id': salle.id}) }}" class="btn btn-danger ms-2">Supprimer</a>
                        <a href="{{ path('edit_salle', {'id': salle.id}) }}" class="btn btn-warning ms-2">Editer</a>

                    </div>
                </div>
            </div>
        {% endfor %}

        <h3 class="mt-5">Nouvelle Salle</h3>

        {{ form_start(form) }}

        <div class="mb-3">
            {{ form_label(form.name, 'Numéro de la salle') }}
            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
        </div>

        <button type="submit" class="btn btn-success">Créer</button>
        {{ form_end(form) }}
    </div>
{% endblock %}